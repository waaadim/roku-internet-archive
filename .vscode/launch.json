  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug App",
      "type": "brightscript",
      "request": "launch",
      "preLaunchTask": "launch",
      "rendezvousTracking": false,
      "injectRdbOnDeviceComponent": true,
      "rootDir": "${workspaceFolder}/build",
      "files": [
        "*",
        "*.*",
        "**/*.*",
        "!*.zip"
      ],
      "envFile": "${workspaceFolder}/.vscode/.env",
      "host": "${env:ROKU_TARGET}",
      "password": "${env:ROKU_PASSWORD}"
    }
  ]
}